                img( alt="vite-logo" loading="lazy" src="/vite.png" width="120" height="120" )
                img( alt="vue-logo" loading="lazy" src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/4c/Typescript_logo_2020.svg/1200px-Typescript_logo_2020.svg.png" width="90" height="90" )
