            div(class="bg-blue-400 bg-opacity-80 flex-1 min-w-[250px] max-w-[300px] py-6 rounded-md")
                span(class="text-white font-bold uppercase text-3xl text-center block") Seeders
            div(class="bg-orange-600 bg-opacity-80 flex-1 min-w-[250px] max-w-[300px] py-6 rounded-md")
