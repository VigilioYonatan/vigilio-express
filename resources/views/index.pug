        div(class="flex justify-center items-center my-6")
            a(href="https://www.facebook.com/Jhonyvig/" class="text-2xl font-bold text-white hover:text-blue-800" target="_blank") Facebook
        div(class="flex px-3 justify-center gap-8 items-center flex-wrap")
            div(class="bg-blue-800 bg-opacity-80 flex-1 min-w-[250px] max-w-[300px] py-6 rounded-md")
