{
    "name": "@vigilio/express",
    "private": true,
    "description": "create web apps with @vigilio/express now",
    "scripts": {
        "start:client": "vite",
        "start:serve": "cross-env NODE_ENV=development  ts-node-dev --respawn -r tsconfig-paths/register  app/main.ts",
        "build:serve": "rimraf dist && tsc  --project tsconfig.build.json ",
        "build:client": "vue-tsc --project ./resources/tsconfig.json && vite build ",
        "start": "cross-env NODE_ENV=production node dist/main.js",
        "test": "vitest",
        "rome:format:server": "rome format  ./app --write",
        "rome:check:server": "rome check ./app",
        "rome:format:client": "rome format  ./resources/ts --write",
        "rome:check:client": "rome check ./resources/ts",
        "rome:format": "pnpm rome:format:server && pnpm rome:format:client",
        "rome:check": "pnpm rome:check:server && pnpm rome:check:client"
    },
    "keywords": [
        "@vigilio/express",
        "@vigilio/express-api"
    ],
    "author": "Vigilio",
    "license": "ISC",
    "dependencies": {
        "@decorators/di": "^2.0.0",
        "@decorators/express": "^2.9.4",
        "@vigilio/express-core": "^1.0.35",
        "axios": "^1.4.0",
        "bcryptjs": "^2.4.3",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "formidable": "^3.5.0",
        "jsonwebtoken": "^9.0.1",
        "mysql2": "^3.5.1",
        "passport": "^0.6.0",
        "pug": "^3.0.2",
        "sequelize": "^6.32.1",
        "sequelize-typescript": "^2.1.5",
        "vue": "^3.3.4",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@faker-js/faker": "^8.0.2",
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/formidable": "^3.4.0",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/module-alias": "^2.0.1",
        "@types/node": "^20.4.2",
        "@types/passport": "^1.0.12",
        "@types/passport-jwt": "^3.0.9",
        "@types/supertest": "^2.0.12",
        "@vitejs/plugin-vue": "^4.2.3",
        "autoprefixer": "^10.4.14",
        "cross-env": "^7.0.3",
        "module-alias": "^2.2.3",
        "postcss": "^8.4.27",
        "rimraf": "^5.0.1",
        "rome": "12.1.3",
        "supertest": "^6.3.3",
        "tailwindcss": "^3.3.3",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.6",
        "unplugin-swc": "^1.3.2",
        "vite": "^4.4.7",
        "vite-plugin-live-reload": "^3.0.2",
        "vitest": "^0.33.0",
        "vue-tsc": "^1.8.8"
    }
}
