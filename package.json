{
    "name": "@vigilio/express",
    "private": true,
    "description": "create web apps with @vigilio/express now",
    "scripts": {
        "dev": "vite",
        "serve": "cross-env NODE_ENV=development  ts-node-dev --respawn -r tsconfig-paths/register  app/main.ts",
        "build:serve": "rimraf dist && tsc  --project tsconfig.build.json ",
        "build:dev": "vue-tsc --project ./resources/tsconfig.json && vite build ",
        "start": "cross-env NODE_ENV=production node dist/main.js",
        "test": "vitest",
        "biome:format:server": "biome format  ./app --write",
        "biome:check:server": "biome check ./app",
        "biome:format:client": "biome format  ./resources/ts --write",
        "biome:check:client": "biome check ./resources/ts",
        "biome:format": "pnpm biome:format:server && pnpm biome:format:client",
        "biome:check": "pnpm biome:check:server && pnpm biome:check:client"
    },
    "keywords": [
        "@vigilio/express",
        "@vigilio/express-api"
    ],
    "author": "Vigilio",
    "license": "ISC",
    "dependencies": {
        "@decorators/di": "^2.0.0",
        "@decorators/express": "^2.9.4",
        "@vigilio/express-core": "^1.2.20",
        "@vigilio/sweet": "^0.0.12",
        "alpinejs": "^3.13.2",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "dotenv": "^16.3.1",
        "ejs": "^3.1.9",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "formidable": "^3.5.1",
        "module-alias": "^2.2.3",
        "mysql2": "^3.6.2",
        "passport": "^0.6.0",
        "pinia": "^2.1.7",
        "sequelize": "^6.33.0",
        "sequelize-typescript": "^2.1.5",
        "valibot": "^0.10.0",
        "vue": "^3.3.7"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.3.1",
        "@faker-js/faker": "^8.2.0",
        "@types/alpinejs": "^3.13.3",
        "@types/bcryptjs": "^2.4.5",
        "@types/compression": "^1.7.4",
        "@types/express": "^4.17.20",
        "@types/express-session": "^1.17.9",
        "@types/formidable": "^3.4.4",
        "@types/jsonwebtoken": "^9.0.4",
        "@types/module-alias": "^2.0.3",
        "@types/node": "^20.8.9",
        "@types/passport": "^1.0.14",
        "@types/supertest": "^2.0.15",
        "@vitejs/plugin-vue": "^4.4.0",
        "autoprefixer": "^10.4.16",
        "cross-env": "^7.0.3",
        "postcss": "^8.4.31",
        "rimraf": "^5.0.5",
        "supertest": "^6.3.3",
        "tailwindcss": "^3.3.5",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.2.2",
        "unplugin-swc": "^1.4.3",
        "vite": "^4.5.0",
        "vite-plugin-live-reload": "^3.0.2",
        "vitest": "^0.33.0",
        "vue-tsc": "^1.8.22"
    }
}
